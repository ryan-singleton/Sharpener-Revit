<Project>
  <PropertyGroup>
    <RevitApiPath>C:\Program Files\Autodesk\Revit 2026</RevitApiPath>
    <UseLocalProject Condition="!Exists('$(RevitApiPath)\RevitAPI.dll')">true</UseLocalProject>
<!--    Uncomment the below line when testing the Revit API stubs on a machine that actually has the DLLs.-->
    <UseLocalProject>true</UseLocalProject>
  </PropertyGroup>

  <ItemGroup Condition="'$(UseLocalProject)' == 'true'">
    <ProjectReference Include="..\stubs\Sharpener.RevitAPI\Sharpener.RevitAPI.csproj">
      <Private>true</Private>
      <IncludeAssets>compile</IncludeAssets>
      <PrivateAssets>all</PrivateAssets>
    </ProjectReference>
    <ProjectReference Include="..\stubs\Sharpener.RevitAPIUI\Sharpener.RevitAPIUI.csproj">
      <Private>true</Private>
      <IncludeAssets>compile</IncludeAssets>
      <PrivateAssets>all</PrivateAssets>
    </ProjectReference>
  </ItemGroup>

  <ItemGroup Condition="'$(UseLocalProject)' != 'true'">
    <Reference Include="RevitAPI">
      <HintPath>$(RevitApiPath)\RevitAPI.dll</HintPath>
      <Private>False</Private>
    </Reference>
    <Reference Include="RevitAPIUI">
      <HintPath>$(RevitApiPath)\RevitAPIUI.dll</HintPath>
      <Private>False</Private>
    </Reference>
  </ItemGroup>
</Project>
